    private double[] data = { (100 / 25) * 12, (100 / 25) * 8, (100 / 25) * 4 };
    private string[] labels = { "Available", "Dispatched", "Need Maintenance" };

    private int availableTrucks = 12;

    MudBlazor.ChartOptions chartColors = new()
        {
